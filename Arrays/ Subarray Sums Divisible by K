class Solution {
    public int subarraysDivByK(int[] nums, int k) {
        int count =0;

        int[] freq = new int[k];
        freq[0]++;
        int prefixSum =0;
        for(int i=0;i<nums.length;i++){
            prefixSum += nums[i];
            int val = prefixSum%k;
            if(val < 0) val += k;
            count += freq[val];
            freq[val]++;
        }
        return count;
    }
}